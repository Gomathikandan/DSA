    public static void prob6() {

        System.out.println("Printing the patterns");
        Scanner sc = new Scanner(System.in);

        System.out.println("Enter the Number of Times: ");
        int numberOfTimes = sc.nextInt();
int count = 0;
        for (int j = 1; j <= numberOfTimes; j++) {
            for (int i = 1; i <= j; i++) {
                System.out.print(j);
                System.out.print("  ");


            }
            System.out.print("\n");
        }



    }
}
